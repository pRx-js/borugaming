            const embed = new Discord.RichEmbed()
                .setDescription(`Tebrikler, baÅŸarÄ±lÄ± bir ÅŸekilde ${sayac[message.guild.id].sayi} kullanÄ±cÄ±ya ulaÅŸtÄ±k!`)
                .setColor("0x808080")
